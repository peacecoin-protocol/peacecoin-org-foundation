{
  "name": "pc-foundation",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "db:generate": "dotenv -- drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply --local DB",
    "db:migrate-production": "dotenv -- drizzle-kit migrate",
    "deploy": "npm run build && wrangler deploy",
    "dev": "react-router dev",
    "start": "wrangler dev",
    "typegen": "wrangler types",
    "typecheck": "react-router typegen && tsc -b",
    "format": "prettier --write . --ignore-path .gitignore"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "npm run format"
    ]
  },
  "dependencies": {
    "@hono/valibot-validator": "^0.5.2",
    "@mdx-js/react": "^3.1.0",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@react-router/cloudflare": "^7.1.5",
    "class-variance-authority": "^0.7.1",
    "dayjs": "^1.11.13",
    "drizzle-orm": "^0.39.2",
    "framer-motion": "^12.3.1",
    "hono": "^4.6.20",
    "hono-react-router-adapter": "^0.6.2",
    "i18next": "^24.2.2",
    "i18next-browser-languagedetector": "^8.0.2",
    "i18next-fs-backend": "^2.6.0",
    "i18next-http-backend": "^3.0.2",
    "isbot": "^5.1.17",
    "jotai": "^2.11.3",
    "lucide-react": "^0.474.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-i18next": "^15.4.0",
    "react-markdown": "^9.0.3",
    "react-router": "^7.1.5",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.0",
    "remix-i18next": "^7.0.2",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7",
    "uuid": "^11.0.5",
    "valibot": "^1.0.0-beta.15"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241112.0",
    "@eslint/compat": "^1.2.6",
    "@hono/vite-dev-server": "^0.18.1",
    "@mdx-js/rollup": "^3.1.0",
    "@react-router/dev": "^7.1.5",
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^22.13.1",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.4.4",
    "drizzle-kit": "^0.30.4",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "tailwindcss": "^4.0.3",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.23.0",
    "vite": "^5.4.11",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^3.87.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.34.4"
  }
}
