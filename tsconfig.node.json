{
  "extends": "./tsconfig.json",
  "include": [
    "react-router.config.ts",
    "vite.config.ts",
    "database/**/*",
    "load-context.ts",
    "worker-configuration.d.ts",
    "schemas/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "types": ["node"],
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/schemas": ["./schemas/index.ts"]
    }
  }
}
